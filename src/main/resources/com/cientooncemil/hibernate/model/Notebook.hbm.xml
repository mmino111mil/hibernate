<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cientooncemil.hibernate.model.Notebook" table="Notebook" schema="111mil">
        <id name="idNotebook">
            <column name="idNotebook" sql-type="int(11)"/>
        </id>
        <property name="marca">
            <column name="marca" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="modelo">
            <column name="modelo" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="procesador">
            <column name="procesador" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="disco">
            <column name="disco" sql-type="decimal(10)" precision="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>